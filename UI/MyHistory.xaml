<Page x:Class="UI.MyHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI"
      mc:Ignorable="d" 
      d:DesignHeight="595" d:DesignWidth="888"
      Title="userBorrowManage" Background="White">

    <StackPanel>

        <ListView Height="349" Margin="259,15,174,-50" Name="bookListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ISBN" Width="170"  DisplayMemberBinding="{Binding Path=c4}"   />
                    <GridViewColumn Header="书名" Width="170"  DisplayMemberBinding="{Binding Path=c1}"  />
                    <GridViewColumn Header="作者" Width="170"  DisplayMemberBinding="{Binding Path=c2}"   />
                    <GridViewColumn Header="出版社" Width="170"  DisplayMemberBinding="{Binding Path=c3}"   />
                    
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Page>

